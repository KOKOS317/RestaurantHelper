<catel:UserControl
    x:Class="RestaurantHelper.Views.ClientViews.ClientMainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:catel="http://catel.codeplex.com"
    Margin="-7">
    <catel:UserControl.Background>
        <ImageBrush ImageSource="../../Resources/clientmain.jpg" />
    </catel:UserControl.Background>

    <Grid MinWidth="350" MinHeight="500">
        <Button
            x:Name="button"
            Width="139"
            Height="45"
            Margin="101,101,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding OrderCommand}"
            Content="Заказать" />
        <Button
            x:Name="button1"
            Width="139"
            Height="45"
            Margin="101,163,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding MyOrdersCommand}"
            Content="Мои заказы" />
        <Button
            x:Name="button2"
            Width="139"
            Height="47"
            Margin="101,223,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ProfileCommand}"
            Content="Профиль" />
        <Button
            x:Name="button3"
            Width="139"
            Height="49"
            Margin="101,290,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding RewiewsCommand}"
            Content="Отзывы" />
        <Button
            x:Name="button4"
            Width="139"
            Height="47"
            Margin="101,365,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding QuestionsCommand}"
            Content="Вопросы" />
        <Button
            x:Name="button5"
            Width="139"
            Height="46"
            Margin="101,431,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ExitCommand}"
            Content="Выход" />

        <TextBlock
            x:Name="textBlock"
            MinWidth="100"
            Margin="38,45,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Aquamarine"
            Text="{Binding AuthorizedString}"
            TextWrapping="Wrap" />

    </Grid>

</catel:UserControl>
