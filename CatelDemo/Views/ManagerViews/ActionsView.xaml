<catel:UserControl
    x:Class="RestaurantHelper.Views.ManagerViews.ActionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:catel="http://catel.codeplex.com">

    <Grid MinWidth="500" MinHeight="400">
        <TextBlock
            x:Name="textBlock"
            Margin="275,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Запуск акции"
            TextWrapping="Wrap" />
        <GroupBox
            x:Name="groupBox"
            Width="165"
            Height="73"
            Margin="37,69,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Header="Тип акции">
            <ComboBox
                x:Name="comboBox"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                VerticalContentAlignment="Stretch"
                IsEditable="False"
                ItemsSource="{Binding ActionTypes}" />
        </GroupBox>


    </Grid>

</catel:UserControl>
