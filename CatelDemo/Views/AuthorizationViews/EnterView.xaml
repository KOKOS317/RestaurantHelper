<catel:UserControl
    x:Class="RestaurantHelper.Views.AuthorizationViews.EnterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:catel="http://catel.codeplex.com"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:validation="clr-namespace:RestaurantHelper.Services.ValidationRules"
    Margin="-7"
    Focusable="True">


    <Grid
        MinWidth="400"
        MinHeight="400"
        Focusable="True">

        <TextBox
            x:Name="textBox"
            Width="120"
            Height="42"
            Margin="202,51,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap">
            <TextBox.Text>
                <Binding Path="Login" UpdateSourceTrigger="PropertyChanged">
                    <!--<Binding.ValidationRules>
                        <validation:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                    </Binding.ValidationRules>-->
                </Binding>
            </TextBox.Text>
            <TextBox.ToolTip>
                <StackPanel>
                    <TextBlock Text="{Binding LoginErrorInfo}" />
                </StackPanel>
            </TextBox.ToolTip>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TextChanged">
                    <catel:EventToCommand Command="{Binding ValidateFieldsCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>
        <TextBox
            x:Name="textBox1"
            Width="120"
            Height="41"
            Margin="202,159,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap">
            <TextBox.Text>
                <Binding Path="Password" UpdateSourceTrigger="PropertyChanged">
                    <!--<Binding.ValidationRules>
                        <validation:NumericTextBoxValidationRule ValidatesOnTargetUpdated="True" />
                    </Binding.ValidationRules>-->
                </Binding>
            </TextBox.Text>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TextChanged">
                    <catel:EventToCommand Command="{Binding ValidateFieldsCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>
        <TextBlock
            x:Name="textBlock"
            Margin="79,68,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Логин"
            TextWrapping="Wrap" />
        <TextBlock
            x:Name="textBlock1"
            Margin="79,159,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Пароль"
            TextWrapping="Wrap" />
        <Image
            x:Name="image"
            Width="49"
            Height="51"
            Margin="128,51,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.388,0.627"
            Source="../../Resources/2.jpg" />
        <Image
            x:Name="image1"
            Width="46"
            Height="48"
            Margin="131,152,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="../../Resources/1.png" />
        <Button
            x:Name="button"
            Width="98"
            Height="45"
            Margin="79,273,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding BackCommand}"
            Content="Назад" />
        <Button
            x:Name="button1"
            Width="104"
            Height="45"
            Margin="247,273,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding TryEnterCommand}"
            Content="Войти"
            IsEnabled="{Binding IsEnabledEnterButton}" />

    </Grid>

</catel:UserControl>
