<catel:UserControl
    x:Class="RestaurantHelper.Views.AuthorizationViews.StartWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:catel="http://catel.codeplex.com"
    Margin="-7">
    <catel:UserControl.Background>
        <ImageBrush ImageSource="../../Resources/back.jpg" />
    </catel:UserControl.Background>
    <Grid
        x:Name="LayoutRoot"
        MinWidth="500"
        MinHeight="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>
        <Button
            x:Name="Button"
            Grid.Row="1"
            Width="130"
            Height="50"
            Margin="185,47,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding EnterCommand}"
            Content="Вход" />
        <Button
            x:Name="Button1"
            Grid.Row="1"
            Width="129"
            Height="53"
            Margin="186,130,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding RegistrationCommand}"
            Content="Регистрация" />
        <Button
            x:Name="Button1Copy"
            Grid.Row="1"
            Width="129"
            Height="47"
            Margin="186,217,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ExitCommand}"
            Content="Выход" />
    </Grid>

</catel:UserControl>
